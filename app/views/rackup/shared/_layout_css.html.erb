/* == Reset == */

html, body, div, span, applet, object, iframe, 
p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td {
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  font-size: 100%;
  vertical-align: baseline;
  background: transparent;
}

h1, h2, h3, h4, h5, h6 {
  margin: 5px 3px;
  color: #333;
}

body {
  font-family: sans-serif;
  font-size: medium;
  background-color: #eeeeee;
}

.clear {
  clear: both; display: block; overflow: hidden; visibility: hidden; width: 0; height: 0;
}

/* == Libraries == */

.pos-l {float:left;}
.pos-r {float:right;}
.pos-c {text-align: center;}

.hd {
  margin-bottom: 10px;
  border-bottom: 2px solid #BBB;
}

.ft {
  margin-top: 10px;
  border-top: 2px solid #BBB;
}

.row {
  padding: 5px;
  background-color: #256188;
  color: white;
}

.row a {
  color: white;
  text-transform: uppercase;
}

.row a:hover {
  text-decoration: underline;
}

.ft-list {
  text-align: center;
}

.ft-list .item {
  display: inline-block;
  padding: 3px 6px;
}

.cpr {
  font-size: small;
  color: #808080;
}

.bd {
  background-color: #eeeeee;
  color: #474b54;
}

.c-block {
  padding: 4px 3px;
}

.c-block p, .c-block ul {
  padding-bottom: 4px;
}

.c-block li {
  padding-left: 4px;
}

.c-block img {
  margin: 2px;
  border: 0px;
}

.c-block a {
  color: #474b54;
}

.content-list {
  margin: 1em 0 1em 2em;
}

.content-list .item {
  list-style-type: circle;
  margin-bottom:0.5em;
  margin-top:0.5em;
}