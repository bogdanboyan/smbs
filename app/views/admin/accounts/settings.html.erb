<h3><%= account_pages_title %></h3>

<%= render :partial => 'actions' %>

<h2>Настройки</h2>

<p>Тип аккаунта: <%= @account.kind_of %></p>
<p>Статус: <%= humanize_state(@account.state) %></p>

<div>
  <%= switch_state_action_button(:path => admin_account_path(@account), :current_state => @account.state) unless is_current?(@account) %>

  <%= button_to("Зайти от имени владельца", pretend_admin_account_path(@account), :method => :put) unless @account.is?(:yamco) %>
  <div class="clear">&nbsp;</div>
</div>

<%= error_messages_for :account, :header_message => nil, :message => nil -%>
<%= form_for :account, :url => admin_account_path(@account), :html => { :method => :put } do |form| %>
  <%= render :partial => 'form', :object => form %>
<%end%>