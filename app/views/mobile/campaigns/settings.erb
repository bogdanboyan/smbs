<% content_for :head do %>

  <%= stylesheet_link_tag 'mobcn/layout' %>
  <%= javascript_include_tag 'mobcn/preview' -%>

<%end%>

<script>
  SMBS.MobileCampaign.Preview.init('<%= mobile_campaign_path(@campaign) %>');
</script>

<div class="grid_8 alpha">
  <div id="action">
    <input id="title" name="title" value="<%= render_document_title(@campaign) %>" disabled="true"/>
    <ul>
      <li><%= link_to "Редактировать", edit_mobile_campaign_path(@campaign) %> (<%= link_to 'Закрыть', mobile_campaigns_path %>)</li>
    </ul>
    <div class="clear">&nbsp;</div>
  </div>
  <%= render :partial=>'shared/notice' %>
  
  <div id="preview"></div>
</div>

<div class="grid_4 omega">
  <p><strong>Проверте отображение:</strong></p>
  <ul id="resolutions">
    <li><a href="#">128x160</a> Samsung SGH j700i</li>
    <li><a href="#">176x220</a> Nokia 2705</li>
    <li><a href="#">240x320</a> Nokia 5310</li>
    <li><a href="#">320x480</a> HTC Hero/Apple iPhone</li>
    <li><a href="#">480x800</a> Google Nexus One</li>
  </ul>
  
<% if @campaign.short_url %>
  <div>
    <p><strong>Короткий адрес:</strong></p>
    <%= short_url_title_with_origin_link_pair(@campaign.short_url) %>
  </div>
<%end%>
  
  <div>
    <p><strong><%= @campaign.short_url ? "Изменить" : "Установить" %> короткий адрес:</strong></p>
    <%= form_tag assign_short_url_mobile_campaign_path(@campaign), :method => :put do %>
      <ul class="input-list">
        <li class="item">
          <%= label_tag 'short_url', "введите новый адрес:" %>
          <%= text_field_tag 'short_url' %>
        </li>
        <li class="item"><%= submit_tag 'Добавить', :class=> 'submit_button' %></li>
      </ul>
    <%end%>
  </div>
  
  <div>
    <%= button_to 'Сгенерируйте Автоматически', generate_short_url_mobile_campaign_path(@campaign), :method => :put %>
  </div>
  
</div>