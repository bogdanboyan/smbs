<% content_for :head do %>
  <%= javascript_include_tag 'mobcn/asset_uploader' -%>
<%end%>

<script>
  SMBS.MobileCampaign.AssetUploader.init('<%= upload_image_mobile_assets_path %>');
</script>

<h2>Галлерея</h2>

<div class="assets">
  <%= render :partial => 'image', :collection => @images %>
</div>
<div class="clear">&nbsp;</div>
<div id="file-uploader">
  <% form_for :image, :url => upload_image_mobile_assets_path, :html => { :id => 'image_form', :multipart => true } do |form| %>
    <%= form.file_field :asset, :size => 15 %>
    <%= submit_tag "upload" %>
  <% end %>
</div>
