<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//WAPFORUM//DTD XHTML Mobile 1.0//EN" "http://www.wapforum.org/DTD/xhtml-mobile10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= @mbc.title %></title>
    <style type="text/css"><%= compress_css render(:partial => 'layout_css') %></style>
  </head>
  
  <body>
    <% @document_model.each do |entity| -%>
        <% if is_a_data?(entity, 'header') -%>
          <%= raw t9e(entity[:value], :header) %>
        <% end -%>
        <% if is_a_data?(entity, 'text') -%>
          <div class="cm"><%= raw t9e(entity[:value], :text) %></div>
        <% end -%>
        <% if is_a_data?(entity, 'images') -%>
          <div class="cm" style="text-align: center;">
          <% prepared_images(entity[:value]).each do |image| -%>
              <a href="<%= image[:instance].asset.url(:preview) %>"><img src="<%= image[:instance].asset.url(image[:style]) %>" style="width: <%= image[:width] %>"/></a>
          <% end -%>
          </div>
          <div class="clear">&nbsp;</div>
        <% end -%>
    <% end -%>
    <div class="cm">
      <br/>
      <span class="cpr">SMBS&copy; <%= Time.now.year %></span>
    </div>
  </body>
</html>