<div class="history_item">
  <div class="date"><%= l(campaign.created_at.to_date, :format => :short) %></div>
  <div class="clicks"><em><strong><%= clicks_counter_link_to(campaign.short_url) %></strong></em></div>
  <div class="info">
    <p class="title">
      <span class="additional-info"><%= t_campaign_state(campaign) %></span><span><%= truncate campaign.title, :length => 40 %></span>
      <ul class="history_actions">
        <li><%= link_to "Редактировать", edit_mobile_campaign_path(campaign) %></li>
        <li><%= link_to "Настройки", settings_mobile_campaign_path(campaign) %></li>
        <li><%= link_to "Архивировать", mobile_campaign_path(campaign), :confirm => 'Вы действительно желаете поместить этот документ в архив?', :method => :delete %></li>
      </ul>
    </p>
  </div>
</div>
