<% if partials == 'likeit_container' -%>
  <div class="document_partial" style="display: none;">
    <div class="toolbar">
      <span class="move">переместить</span> <span class="remove">удалить</span>
      <span class="likeit_control">
        <input value="Мне нравится!" maxlength="15" name="title" id="title" class="title"/>
        <input value="@тег" name="tag" id="tag" class="tag"/>
        <input type="radio" name="position" value="posL" checked="true"/>слева
        <input type="radio" name="position" value="posC"/>по центру
        <input type="radio" name="position" value="posR"/>справа
      </span>
    </div>
    <div class="likeit_container">
      <div class="likeit">
        <span class="button">Мне нравится!</span>
      </div>
    </div>
    <div class="clear">&nbsp;</div>
  </div>
<%end-%>