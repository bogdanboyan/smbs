<% content_for :head do %>

  <%= stylesheet_link_tag 'mobcn/layout' %>
  <%= javascript_include_tag 'mobcn/preview' -%>

<%end%>

<script>
  SMBS.MobileCampaign.Preview.init('<%= mobile_campaign_path(@mbc) %>');
</script>

<div class="grid_8 alpha">
  <div id="action">
    <input id="title" name="title" value="<%= render_document_title(@mbc) %>" disabled="true"/>
    <ul>
      <li><%= link_to "Редактировать", edit_mobile_campaign_path(@mbc) %> (<%= link_to 'Закрыть', mobile_campaigns_path %>)</li>
    </ul>
    <div class="clear">&nbsp;</div>
  </div>
  
  <div id="preview"></div>
  
</div>

<div class="grid_4 omega">
  <p><strong>Проверте отображение:</strong></p>
  <ul id="resolutions">
    <li>128x160 Samsung SGH j700i</li>
    <li>176x220 Nokia 2705</li>
    <li>240x320 Nokia 5310</li>
    <li>320x480 HTC Hero/Apple iPhone</li>
    <li>480x800 Google Nexus One</li>
  </ul>
</div>