<p>Закодировать: <%= link_to "ссылку на сайт", '#', :onclick=> "toggle_form('#link_form');" %>, <%= link_to "смс-сообщение", '#', :onclick=> "toggle_form('#sms_form');" %>, <%= link_to "текст", '#', :onclick=> "toggle_form('#text_form');" %></p>

<script>
  var toggle_form     = function(id) {
    $('form').hide();$(id).show();
    return false;
  }
  var on_ajax_success = function(data) {
    if(data.error_message) { display_notice(data.error_message); }
    if(data.html) { $('#history_items').prepend(data.html); }
  }
</script>


<%= render :partial=>'shared/notice' %>

<% form_for :link_code, @link_code = LinkCode.new, :url=> {:action=>'create_link'}, :html=>{:id=>'link_form'} do |f| %>
	<div>адрес сайта:</div>
	<div><%= f.text_field :origin %></div>
	<div><%= submit_tag 'создать код', :class=>'input_button' %></div>
<%end%>

<script>
	$('#link_form').submit(function() {
	  form_data = $(this).serialize();
		$('#message').remove();
		$.ajax({
		  type: 'post',
			dataType: 'json',
		  url: '<%= create_link_barcodes_path %>',
		  data: form_data,
		  success: on_ajax_success
		});
	  return false;
	});
</script>

